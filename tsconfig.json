{
	"extends": "@sapphire/ts-config/extra-strict",
	"compilerOptions": {
		"outDir": "./dist",
		"paths": {
			"#game-data/*": ["./src/game-data/*.json"],
			"#lib/*": ["./src/lib/*.ts"]
		},
		"removeComments": true,
		"rootDir": "./src",
		"target": "ESNext",
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
	},
	"include": ["src/**/*", "src/**/*.json"],
	"exclude": ["src/game-data-examples"]
}
